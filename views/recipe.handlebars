<div id="recipe-header" class="row">
  <div class="col-7">
    <a id="return-link" href="/ricos-menu" class="row" role="button">
      <div class="col-1">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left"
          viewBox="0 0 16 16">
          <path fill-rule="evenodd"
            d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
        </svg>
      </div>
      <h3 class="col-3">Menu</h3>
    </a>
  </div>
  <div speech-bubble pright acenter id="speech-bubble-recipe" class="offset-3 col-5">
    <h4>Not a fan? Let's get in the lab</h4>
    <a href="/ricos-lab" role="button" class="btn btn-primary">
      <h4>Go to Rico's Lab</h4>
    </a>
  </div>
  <div id="rico-recipe" class="col-3 img-fluid"><a href="/"><img src="/img/rico.png" width="160px" height="160px"
        alt="the mascot Rico"></a></div>
</div>

<hr class="recipe-hr">

<div id="add-image" class="row">
  <div class="offset-4">
    {{#each recipes}}
    <h2>{{this.name}}</h2>
    {{/each}}
  </div>
</div>


<div id="carousel" class="offset-2 carousel slide">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/img/temp.png" class="d-block w-80 img-fluid" alt="temp-img">
    </div>
    <div class="carousel-item">
      <img src="/img/temp.png" class="d-block w-80 img-fluid" alt="temp-img">
    </div>
    <div class="carousel-item">
      <img src="/img/temp.png" class="d-block w-80 img-fluid" alt="temp-img">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<br>

<div class="row">
  <div class="offset-1 col-3">
    <h4>Ingredients</h4>
    <ul class="ingredients">
      {{#each recipes}}
      <p> {{this.ingredients}} </p>
      {{/each}}
    </ul>
  </div>
  <div class="col-7">
    <h4>Instructions</h4>
    <ul class="instructions">
      {{#each recipes}}
      <p> {{this.instructions}} </p>
      {{/each}}
    </ul>
  </div>
</div>
  
