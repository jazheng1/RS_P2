<div id="recipe-header" class="row">
  <div class="col-12 row">
    <a id="return-link" href="/ricos-menu" class="row" role="button">
      <div class="col-1">
        <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-arrow-left"
          viewBox="0 0 16 16">
          <path fill-rule="evenodd"
            d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
        </svg>
      </div>
      <h3 class="col-3">Menu</h3>
    </a>
  </div>
  <div id="to-lab" class="row">
    <div speech-bubble pright acenter id="speech-bubble-recipe" class="offset-3 col-5">
      <h4>Not a fan? Let's get in the lab</h4>
      <a href="/ricos-lab" role="button" class="btn btn-primary">
        <h4>Go to Rico's Lab</h4>
      </a>
    </div>
    <div id="rico-recipe" class="col-3 img-fluid"><a href="/"><img src="/img/rico.png" width="160px" height="160px"
          alt="the mascot Rico"></a></div>
  </div>

</div>

<hr class="recipe-hr">

<div id="recipe">
  <div id="recipe-title" class="row">
    {{#each recipes}}
    <h2>{{this.name}}</h2>
    {{/each}}
  </div>

  <div id="carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/img/plate.png" class="d-block w-80 img-fluid" alt="temp-img">
      </div>
      <div class="carousel-item">
        <img src="/img/plate2.png" class="d-block w-80 img-fluid" alt="temp-img">
      </div>
      <div class="carousel-item">
        <img src="/img/temp.png" class="d-block w-80 img-fluid" alt="temp-img">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <div id="upload-img" class="row">
    <div class="col-sm-12 col-md-8">
      <h3>Share your masterpiece!</h3>
    </div>
    <div class="col-sm-12 col-md-4">
      <form action="upload.php" method="post">
        <input type="file" name="file" id="user-image" />
      </form>
    </div>
  </div>

  <br>

  <div id="recipe-details" class="row">
    <div class="col-sm-12 col-md-5">
      <h3>Ingredients</h3>
      <ul class="ingredients">
        {{#each recipes}}
        {{#each this.ingredients}}
        <p> {{this}} </p>
        {{/each}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-12 col-md-7">
      <h3>Instructions</h3>
      <ul class="instructions">
        {{#each recipes}}
        {{#each this.instructions}}
        <p> {{this}} </p>
        {{/each}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div id="recipe-comments">
    <h2>Comments</h2>
  </div>
  <hr class="comments-hr">
  <div id="input-comment">
    <form action="POST">
      <div class="row">
        <div class="col-sm-12 col-md-7">
          <input id="user-input" class="form-control" type="text" placeholder="ex. eggs"
            aria-label="default input example">
        </div>
        <div class="col-sm-12 col-md-5">
          <button id="GenerateRecipe" type="submit" class="btn btn-primary">Comment</button>
        </div>
      </div>
    </form>
  </div>
  <div id="user-comments">

  </div>
</div>